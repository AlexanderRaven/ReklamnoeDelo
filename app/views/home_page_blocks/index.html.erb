<% provide(:title, 'Редактирование стартовой страницы') %>
<div class="container">
<div class="row">
            <div class="box">
                <div class="col-lg-12">
          <h1>Управление стартовой страницей</h1>

            <br>

          <table border="2">
            
            <tr>
              <th ><center>Заголовок</center></th>
              <th colspan="3"><center>Управление</center></th>
            </tr>
            

           
            <% @home_page_blocks.each do |home_page_block| %>
              <tr>
              <td class="table_element"><%= home_page_block.header %></td>
              <td class="table_element"><%= button_to "Показать", home_page_block, method: "get", class: "btn btn-default admin_btn" %></td>
              <td class="table_element"><%= button_to "Редактировать", edit_home_page_block_path(home_page_block), method: "get", class: "btn btn-default admin_btn" %></td>
              <td class="table_element"><%= button_to "Удалить", home_page_block, method: :delete, class: "btn btn-default admin_btn", data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
              </tr>
            <% end %>
           
          </table>
          <center>
            <br>
            <%=button_to "Создать", new_home_page_block_path, method: "get", class: "btn btn-default admin_btn" %>
            <br>
            <br>
          </center>

          <br>

          </div>
      </div>
</div>
</div>