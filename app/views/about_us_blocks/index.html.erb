<% provide(:title, 'Редактирование страницы О Нас') %>
<div class="container">
<div class="row">
            <div class="box">
                <div class="col-lg-12">
          <h1>Управление страницей О нас</h1>

            <br>

          <table border="2">
            
            <tr>
              <th ><center>Заголовок</center></th>
              <th colspan="3"><center>Управление</center></th>
            </tr>
            

           
            <% @about_us_blocks.each do |about_us_block| %>
              <tr>
              <td class="table_element"><%= about_us_block.header %></td>
              <td class="table_element"><%= button_to "Показать", about_us_block, method: "get", class: "btn btn-default admin_btn" %></td>
              <td class="table_element"><%= button_to "Редактировать", edit_about_us_block_path(about_us_block), method: "get", class: "btn btn-default admin_btn" %></td>
              <td class="table_element"><%= button_to "Удалить", about_us_block, method: :delete, class: "btn btn-default admin_btn", data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
              </tr>
            <% end %>
           
          </table>
          <center>
            <br>
            <%=button_to "Создать", new_about_us_block_path, method: "get", class: "btn btn-default admin_btn" %>
            <br>
            <br>
          </center>

          <br>

          </div>
      </div>
</div>
</div>