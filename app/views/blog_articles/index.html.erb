<% provide(:title, 'Редактирование блога') %>
<div class="container">
<div class="row">
            <div class="box">
                <div class="col-lg-12">
					<h1>Управление блогом</h1>

						<br>

					<table border="2">
					  
						<tr>
						  <th ><center>Заголовок</center></th>
						  <th colspan="3"><center>Управление</center></th>
						</tr>
					  

					 
						<% @blog_articles.each do |blog_article| %>
						  <tr>
							<td class="table_element"><%= blog_article.Title %></td>
							<td class="table_element"><%= button_to "Показать", blog_article, method: "get", class: "btn btn-default admin_btn" %></td>
							<td class="table_element"><%= button_to "Редактировать", edit_blog_article_path(blog_article), method: "get", class: "btn btn-default admin_btn" %></td>
							<td class="table_element"><%= button_to "Удалить", blog_article, method: :delete, class: "btn btn-default admin_btn", data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
						  </tr>
						<% end %>
					 
					</table>
					<center>
						<br>
						<%=button_to "Создать", new_blog_article_path, method: "get", class: "btn btn-default admin_btn" %>
						<br>
						<br>
					</center>

					<br>

					</div>
			</div>
</div>
</div>