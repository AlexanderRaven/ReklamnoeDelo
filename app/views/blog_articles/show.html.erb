<% provide(:title, 'Редактирование блога') %>
<div class="container">

<div class="row">
            <div class="box">
                <div class="col-lg-12">
					<p id="notice"><%= notice %></p>

					<p>
					  <strong>Заголовок:</strong>
					  <%= @blog_article.Title.html_safe %>
					</p>
					<%= button_to "Редактировать", edit_blog_article_path(@blog_article), method: "get", class: "btn btn-default admin_btn" %>
					<br>
					<%= button_to "Назад", blog_articles_path, method: "get", class: "btn btn-default admin_btn" %>
				</div>
			</div>
</div>
<div class="row">
            <div class="box">
                <div class="col-lg-12">
                  <h1>
                    Короткий вариант
                  </h1>
                    <hr>
                    <h2 class="intro-text text-center">
					  <%= @blog_article.Title.html_safe %>
                    </h2>
                    <hr>
                    <%= @blog_article.short.html_safe %>
                </div>
            </div>
</div>
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <h1>
          Статья
        </h1>
        <hr>
        <h2 class="intro-text text-center">
          <%= @blog_article.Title.html_safe %>
        </h2>
        <hr>
        <%= @blog_article.Body.html_safe %>
      </div>
    </div>
  </div>
</div>