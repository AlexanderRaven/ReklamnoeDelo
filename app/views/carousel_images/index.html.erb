<% provide(:title, 'Редактирование карусели') %>
<div class="container">
<div class="row">
            <div class="box">
                <div class="col-lg-12">
          <h1>Управление каруселью</h1>

            <br>

          <table border="2">
            
            <tr>
              <th ><center>Название</center></th>
              <th colspan="3"><center>Управление</center></th>
            </tr>
            

           
             <% @carousel_images.each do |carousel_image| %>
                <tr>
                  <td class="table_element"><%= carousel_image.title %></td>
                  <td class="table_element"><%= button_to "Показать", carousel_image, method: "get", class: "btn btn-default admin_btn" %></td>
                  <td class="table_element"><%= button_to "Редактировать", edit_carousel_image_path(carousel_image), method: "get", class: "btn btn-default admin_btn" %></td>
                  <td class="table_element"><%= button_to "Удалить", carousel_image, method: :delete, class: "btn btn-default admin_btn", data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
                </tr>
            <% end %>
           
          </table>
          <center>
            <br>
            <%=button_to "Создать", new_carousel_image_path, method: "get", class: "btn btn-default admin_btn" %>
            <br>
            <br>
          </center>

          <br>

          </div>
      </div>
</div>
</div>
