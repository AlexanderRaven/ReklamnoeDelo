<% provide(:title, 'Редактирование карусели') %>
<div class="row">
            <div class="box">
                <div class="col-lg-12">
					<p id="notice"><%= notice %></p>

					<p>
					  <strong>Название:</strong>
					  <%= @carousel_image.title %>
					</p>
					<%= button_to "Редактировать", edit_carousel_image_path(@carousel_image), method: "get", class: "btn btn-default admin_btn" %>
					<br>
					<%= button_to "Назад", carousel_images_path, method: "get", class: "btn btn-default admin_btn" %>
				</div>
			</div>
</div>
<div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
					             <%=  @carousel_image.title %>
                    </h2>
                    <hr>
                    <%= image_tag @carousel_image.avatar.url(:slide) %>
                </div>
            </div>
</div>