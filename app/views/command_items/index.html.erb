<% provide(:title, 'Редактирование команды') %>
<div class="container">
<div class="row">
            <div class="box">
                <div class="col-lg-12">
          <h1>Управление командой</h1>

            <br>

          <table border="2">
            
            <tr>
              <th ><center>ФИО/Должность</center></th>
              <th colspan="3"><center>Управление</center></th>
            </tr>
            

           
             <% @command_items.each do |command_item| %>
                <tr>
                  <td class="table_element"><%= command_item.name %> <br> <%= command_item.position %></td>
                  <td class="table_element"><%= button_to "Показать", command_item, method: "get", class: "btn btn-default admin_btn" %></td>
                  <td class="table_element"><%= button_to "Редактировать", edit_command_item_path(command_item), method: "get", class: "btn btn-default admin_btn" %></td>
                  <td class="table_element"><%= button_to "Удалить", command_item, method: :delete, class: "btn btn-default admin_btn", data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
                </tr>
            <% end %>
           
          </table>
          <center>
            <br>
            <%=button_to "Создать", new_command_item_path, method: "get", class: "btn btn-default admin_btn" %>
            <br>
            <br>
          </center>

          <br>

          </div>
      </div>
</div>
</div>
