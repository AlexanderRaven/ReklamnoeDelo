<% provide(:title, 'Редактирование команды') %>
<div class="row">
            <div class="box">
                <div class="col-lg-12">
					<p id="notice"><%= notice %></p>

					<p>
					  <strong>ФИО:</strong>
					  <%= @command_item.name %>
					</p>
					<%= button_to "Редактировать", edit_command_item_path(@command_item), method: "get", class: "btn btn-default admin_btn" %>
					<br>
					<%= button_to "Назад", command_items_path, method: "get", class: "btn btn-default admin_btn" %>
				</div>
			</div>
</div>
<div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
					             <%=  @command_item.name %>
                    </h2>
                    <center>
                    <hr>
                    	<p><strong>Должность: </strong></p><br>
  						<p><%= @command_item.position %></p>
                    <br>
                    <%= image_tag @command_item.avatar.url(:photo) %>
                    </center>
                </div>
            </div>
</div>