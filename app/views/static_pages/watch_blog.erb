<% provide(:title, 'Просмотр статьи') %>
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <div class="col-lg-12 text-center">
          <hr>
          <h2> <%= @blog_article.Title %>
            <br>
            <small><%= Russian::strftime(@blog_article.created_at.to_date, "%d %B %Y")%></small>
          </h2>
          <hr>
        </div>
        <%= @blog_article.Body.html_safe %>
        <br>
        <hr>
        <center>
          <%= button_to "Назад", blog_path, method: "get", class: "btn btn-default" %>
        </center>

      </div>
    </div>
  </div>

