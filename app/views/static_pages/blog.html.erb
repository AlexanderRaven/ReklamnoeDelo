<% provide(:title, 'Блог') %>
<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Наш
                        <strong>блог</strong>
                    </h2>
                    <hr>
                </div>
                
                
                <div class="col-lg-12 text-center">
                    <%= will_paginate @blog_articles %>
                </div>
            </div>
        </div>
        
        <% @blog_articles.each do |blog_article| %>
                          <div class="box">
                                <div class="col-lg-12 text-center">
                                    <hr>
                                    <h2> <%= blog_article.Title %>
                                        <br>
                                        <small>16 Октября 2015</small>
                                    </h2>
                                    <hr>
                                </div>
                                 <div class="col-lg-12">
                                    <%= blog_article.Body.html_safe %>
                                    <hr>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <a href="#" class="btn btn-default btn-lg">Просмотр</a>
                                </div>
                        </div>
        <% end %>
        <div class="col-lg-12 text-center">
                    <%= will_paginate @blog_articles %>
        </div>
    </div>
    <!-- /.container -->