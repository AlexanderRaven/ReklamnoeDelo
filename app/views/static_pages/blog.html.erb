<% provide(:title, 'Блог') %>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Наш
                        <strong>блог</strong>
                    </h2>
                    <hr>
                </div>
                
                
                <div class="col-lg-12 text-center">
                    <%= will_paginate @blog_articles %>
                </div>
            </div>
        </div>
        
        <% @blog_articles.each do |blog_article| %>
        <div class="row">
                          <div class="box">
                                <div class="col-lg-12 text-center">
                                    <hr>
                                    <h2> <%= blog_article.Title %>
                                        <br>
                                        <small><%= Russian::strftime(blog_article.created_at.to_date, "%d %B %Y")%></small>
                                    </h2>
                                    <hr>
                                </div>
                                 <div class="col-lg-12">
                                    <%= blog_article.short.html_safe %>
                                    <hr>
                                </div>
                                <div class="col-lg-12 text-center">

                                  <%= button_to "Просмотр", watch_blog_path, method: "get", params: { id: blog_article.id }, class: "btn btn-default btn-lg" %>
                                </div>
                        </div>
                        </div>
        <% end %>
        <div class="col-lg-12 text-center">
                    <%= will_paginate @blog_articles %>
        </div>