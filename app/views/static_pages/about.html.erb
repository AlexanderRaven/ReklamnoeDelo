<% provide(:title, 'О компании') %>
<% @about_us_blocks.each do |about_us_block| %>

    <div class="row">
      <div class="box">
        <div class="col-lg-12">
          <hr>
          <h2 class="intro-text text-center">
            <%= about_us_block.header %>
          </h2>
          <hr>
        </div>
          <%= about_us_block.body.html_safe %>
        <div class="clearfix"></div>
      </div>
    </div>

<% end %>

<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Наша
        <strong>Команда</strong>
      </h2>
      <hr>
    </div>
    <% @command_items.each do |command_item| %>
        <div class="col-sm-4 text-center">
         <%= image_tag command_item.avatar.url(:photo), class: "img-responsive" %>

          <h3><%= command_item.name %><br>
            <small><%= command_item.position %></small>
          </h3>
        </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
</div>